{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "alwaysStrict": true,             //emit use 'strict' in output js files
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "typeRoots": ["node_modules/@types"],
//    "strictNullChecks": true, -> can not be used yet, too much code will be invalid
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
